{
  "name": "personal-website-v4",
  "version": "1.0.0",
  "author": {
    "name": "Jordan Lambrecht",
    "email": "me@jordanlambrecht.com",
    "url": "https://jordanlambrecht.com"
  },
  "description": "My personal website",
  "license": "MIT",
  "private": "true",
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "dotenv -e .env.local -- next dev",
    "generate:importmap": "dotenv -e .env.local -- payload generate:importmap",
    "generate:types": "dotenv -e .env.local -- payload generate:types",
    "generate:schema": "dotenv -e .env.local -- payload generate:db-schema",
    "generate": "dotenv -e .env.local -- payload generate:types && dotenv -e .env.local -- payload generate:db-schema && dotenv -e .env.local -- payload generate:importmap",
    "lint": "cross-env dotenv -e .env.local next lint",
    "lint:fix": "cross-env dotenv -e .env.local next lint --fix",
    "payload": "dotenv -e .env.local -- payload",
    "start": "cross-env next start",
    "reinstall": "rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf .next && pnpm store prune && pnpm install",
    "wipe": "rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf .next && pnpm store prune",
    "migrate:dev": "dotenv -e .env.local -- pnpm payload migrate",
    "migrate:prod": "dotenv -e .env.prod -- pnpm payload migrate",
    "start:local": "dotenv -e .env.local -- next dev",
    "start:prod": "dotenv -e .env.prod -- next start"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@innovixx/payload-color-picker-field": "^2.0.2",
    "@payloadcms/db-postgres": "^3.38.0",
    "@payloadcms/next": "^3.38.0",
    "@payloadcms/plugin-nested-docs": "^3.38.0",
    "@payloadcms/plugin-redirects": "^3.38.0",
    "@payloadcms/plugin-seo": "^3.38.0",
    "@payloadcms/richtext-lexical": "^3.38.0",
    "@payloadcms/storage-s3": "^3.38.0",
    "@payloadcms/ui": "^3.38.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.12.1",
    "lucide-react": "0.511.0",
    "next": "^15.3.2",
    "next-plausible": "^3.12.4",
    "next-sitemap": "^4.2.3",
    "payload": "^3.38.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "0.34.2",
    "tailwind-merge": "^3.3.0",
    "yet-another-react-lightbox": "^3.23.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^22.15.20",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.3.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.11.0"
}
